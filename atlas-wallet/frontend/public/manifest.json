{
  "manifest_version": 3,
  "name": "Nimble Wallet",
  "version": "1.0.0",
  "description": "A secure and nimble crypto wallet.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Nimble Wallet"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "permissions": ["storage", "sidePanel"],
  "side_panel": {
    "default_path": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
